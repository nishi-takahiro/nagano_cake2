<h1>Admin::Customers#edit</h1>
<p>Find me in app/views/admin/customers/edit.html.erb</p>
<div class = "container">
    <div class = "row m-4">
        <div class = "col-sm-12 col-mg-6 col-lg-6">
            <h3>
            <strong><%= @customer.first_name %><%= @customer.last_name %></strong>さんの<strong>会員情報編集</strong>
            </h3>
        </div>
    </div>
    
    <%= form_with model: @customer, url: admin_customer_path(@customer) do |f| %>
    <div class = "row m-3">
        <div class = "col-sm-4 col-mg-3 col-lg-2">会員ID</div>
        <div class = "col-sam-4 col-mg-4 col-lg-3"><%=  @customer.id %></div>
    </div>
    <div class = "row m-3">
        <div class = "col-sm-4 col-mg-3 col-lg-2">氏名</div>
        <div class = "col-sam-4 col-mg-4 col-lg-3"><%= f.text_field :first_name, autofocus: true, autocomlete: "first_name" %></div>
        <div class = "col-sam-4 col-mg-4 col-lg-3"><%= f.text_field :last_name, sutofocus: true, autocomlete: "last_name" %></div>
    </div>
    <div class = "row m-3">
        <div class = "col-sm-4 col-mg-3 col-lg-2">フリガナ</div>
        <div class = "col-sam-4 col-mg-4 col-lg-3"><%= f.text_field :first_name_kana, autofocus: true, autocomlete: "first_name_kana" %></div>
        <div class = "col-sam-4 col-mg-4 col-lg-3"><%= f.text_field :last_name_kana, sutofocus: true, autocomlete: "last_name_kana" %></div>
    </div>
    <div class = "row m-3">
        <div class = "col-sm-4 col-mg-3 col-lg-2">郵便番号</div>
        <div class = "col-sam-4 col-mg-4 col-lg-3"><%= f.text_field :postal_code, autofocus: true, autocomlete: "postal_code" %></div>
    </div>
    <div class = "row m-3">
        <div class = "col-sm-4 col-mg-3 col-lg-2">住所</div>
        <div class = "col-sam-4 col-mg-4 col-lg-3"><%= f.text_field :address, size: 60,autofocus: true, autocomlete: "address" %></div>
    </div>
    <div class = "row m-3">
        <div class = "col-sm-4 col-mg-3 col-lg-2">電話番号</div>
        <div class = "col-sam-4 col-mg-4 col-lg-3"><%= f.text_field :telephone_number,autofocus: true, autocomlete: "telephone_number" %></div>
    </div>
    <div class = "row m-3">
        <div class = "col-sm-4 col-mg-3 col-lg-2">メールアドレス</div>
        <div class = "col-sam-4 col-mg-4 col-lg-3"><%= f.text_field :email, size: 60,autofocus: true, autocomlete: "email" %></div>
    </div>
    <div class = "row m-3">
        <div class = "col-sm-4 col-mg-3 col-lg-2">メールアドレス</div>
        <div class = "col-sam-4 col-mg-4 col-lg-3"><%= f.text_field :email, size: 60,autofocus: true, autocomlete: "email" %></div>
    </div>
    <% end %>
</div>