
<div class = "container">
    
    <div class = "row m-4">
        <h4 class = "col-sm-6 col-mg-6 col-lg-6 font-weight-bold">会員一覧</h4>
    </div>
    
    <div class = "row">
        <div class = "col-sm-12 col-mg-12 col-lg-12">
            
            <table class = "table">
                <thead>
                    <tr>
                        <th scope = "col">会員ID</th>
                        <th scope = "col">氏名</th>
                        <th scope = "col">メールアドレス</th>
                        <th scope = "col">ステータス</th>
                    </tr>
                </thead>
                
                <tbody>
                    <% @customer.each do |customer| %>
                    <tr>
                        <td><%= customer.id %></td>
                        <td><%= link_to admin_customer_path(customer) do %>
                            <%= customer.first_name %><%= customer.last_name %></td>
                            <% end %>
                        <td><%= customer.email %></td>
                        <td class = "text-success">
                            <% if customer.is_active? %>
                            <%= "有効" %>
                            <% else %>
                            <div style = "color:#808080">
                            <%= "退会" %>
                            </div>
                            <% end %>
                        </td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
            
            <div class = "m-4"><%= paginate @customer %></div>
        </div>
    </div>
</div>