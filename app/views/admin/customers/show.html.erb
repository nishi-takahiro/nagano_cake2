
<div class = "container">
    
        
    <div class = "row m-4">
        <h4 class = "col-sm-12 col-mg-10 col-lg-9">
            <strong><%= @customer.first_name %><%= @customer.last_name %></strong>さんの<strong>会員詳細</strong>
        </h4>
    </div>
        
    <div class = "row">
        <div class = "col-sam-12 col-mg-11 col-lg-11">
                
            <div class = "row m-3">
                <div class = "col-sm-4 col-mg-4 col-lg-3">会員ID</div>
                 <div class = "col-sm-8 col-mg-6 col-lg-6"><%= @customer.id %></div>
            </div>
            
            <div class = "row m-3">
                <div class = "col-sm-4 col-mg-4 col-lg-3">氏名</div>
                 <div class = "col-sm-8 col-mg-6 col-lg-6"><%= @customer.first_name %>　<%= @customer.last_name %></div>
            </div>
              <div class = "row m-3">
                <div class = "col-sm-4 col-mg-4 col-lg-3">フリガナ</div>
                 <div class = "col-sm-8 col-mg-6 col-lg-6"><%= @customer.first_name_kana %>　<%= @customer.last_name_kana %></div>
            </div>
              <div class = "row m-3">
                <div class = "col-sm-4 col-mg-4 col-lg-3">郵便番号</div>
                 <div class = "col-sm-8 col-mg-6 col-lg-6"><%= @customer.postal_code %></div>
            </div>
              <div class = "row m-3">
                <div class = "col-sm-4 col-mg-4 col-lg-3">住所</div>
                 <div class = "col-sm-8 col-mg-6 col-lg-6"><%= @customer.address %></div>
            </div>
              <div class = "row m-3">
                <div class = "col-sm-4 col-mg-4 col-lg-3">電話番号</div>
                 <div class = "col-sm-8 col-mg-6 col-lg-6"><%= @customer.telephone_number %></div>
            </div>
              <div class = "row m-3">
                <div class = "col-sm-4 col-mg-4 col-lg-3">メールアドレス</div>
                 <div class = "col-sm-8 col-mg-6 col-lg-6"><%= @customer.email %></div>
            </div>
              <div class = "row m-3">
                <div class = "col-sm-4 col-mg-4 col-lg-3">会員ステータス</div>
                 <div class = "col-sm-8 col-mg-6 col-lg-6 text-success">
                     <% if @customer.is_deleted %>
                     <div style = "color:#808080">
                     <%= "退会" %>
                     </div>
                     <% else %>
                     <%= "有効" %>
                     <% end %>
                 </div>
            </div>
            
             <div class = "row m-3">
                <div class = "col-sm-4 col-mg-4 col-lg-3"></div>
                 <div class = "col-sm-3 col-mg-3 col-lg-3">
                     <%= link_to "編集する",  edit_admin_customer_path(@customer), class: "btn btn-success", style: "width:150" %>
                 </div>
                 <div class = "col-sm-3 col-mg-3 col-lg-3">
                   <%= link_to "注文履歴一覧を見る", admin_path, class: "btn btn-primary", style: "width:170" %>
                 </div>
            </div>
            
        </div>
    </div>
    
    
</div>