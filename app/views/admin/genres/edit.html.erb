

<div class = "container">
    <div class = "row">
        <div class = "col-sm-12 col-mg-11 col-lg-10 px-sm-0">
            <h5 class = "col-lg-3 m-5">ジャンル編集</h5>
            
            <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
            <div class = "row">
                <div class = "col-sm-12 col-mg-8 col-lg-7">
                    <div class = "row">
                        <div class = "col-lg-3">ジャンル名</div>
                        <div class = "col-lg-5">
                            <div class = "form-group">
                                <div class = "field">
                                    <%= f.text_field :name, autofocus: true %>
                                </div>
                            </div>
                        </div>
                        <div class = "col-lg-4"><%= f.submit "変更を保存", style: "width:150", class: "btn btn-success" %></div>
                    </div>
                </div>
            </div>
            <% end %>
            
        </div>
    </div>
</div>