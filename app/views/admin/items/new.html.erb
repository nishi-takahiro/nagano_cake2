<h1>Admin::Items#new</h1>
<p>Find me in app/views/admin/items/new.html.erb</p>

<div class = "container">
    <div class = "row">
        <div class = "col-sm-12 col-mg-11 col-lg-10 px-sm-0">
            
          <h4 class = "col-lg-3 m-5 font-weight-bold">商品新規登録</h4>
         
          <%= form_with model: @item, url: admin_items_path(:id) do |f| %>
          <!--画像投稿-->
          <div class ="row">
              <div class = "col-lg-2">商品画像</div>
              <div class = "col-lg-5">
                  <div class = "form-group">
                       <%= f.file_field :image, accept: "image/*" %>
                  </div>
              </div>
          </div>
          
          <div class = "row">
              <div class = "col-lg-2">商品名</div>
              <div class = "col-lg-5">
                  <div class = "form-group">
                      <%= f.text_field :name, size: 40, autofocus: true, autocomlete: "name" %>
                  </div>
              </div>
          </div>
          <div class = "row">
              <div class = "col-lg-2">商品説明</div>
              <div class = "col-lg-5">
                  <div class = "form-group">
                      <%= f.text_area :introduction, size: "40x10", autofocus: true, autocomlete: "introduction" %>
                  </div>
              </div>
          </div>
          <div class = "row">
              <div class = "col-lg-2">ジャンル</div>
              <div class = "col-lg-5">
                  <div class = "form-group">
                      
                      <!-- ジャンルのプルダウン選択-->
                      <%= f.collection_select :genre_id, Genre.all, :id, :name ,{}, include_blank: "選択してください" %>
                  </div>
              </div>
          </div>
          <div class = "row">
              <div class = "col-lg-2">税抜き価格</div>
              <div class = "col-lg-5">
                  <div class = "form-group">
                      <%= f.text_field :price, size: 40, autofocus: true, autocomlete: "introduction" %>円
                  </div>
              </div>
          </div>
          <div class = "row">
              <div class = "col-lg-2">販売ステータス</div>
              <div class = "col-lg-5">
                  <div class = "form-group">
                      <%= f.radio_button :is_active, "sale" %>
                      <%= f.label :is_active, "販売中" %>
                      
                      <%= f.radio_button :is_active, "stop_sale" %>
                      <%= f.label :is_active, "販売停止中" %>
                  </div>
              </div>
          </div>
          
          <div class = "row">
              <div class = "col-lg-10">
                  <%= f.submit "新規登録",  style: "width:150",class: "btn btn-success" %> 
              </div>
          </div>
          <% end %>
            
        </div>
    </div>
</div>