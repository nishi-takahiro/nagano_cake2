
<div class = "container">
    
    <div class = "row m-4">
        
        <h4 class = "col-sm-6 col-mg-6 col-lg-6 font-weight-bold">商品一覧</h4>
        <div class = "col-sm-6 col-mg-6 col-lg-6 ms-auto">
          <%= link_to new_admin_item_path do %>
          <i class="fas fa-plus-circle fa-3x ms-auto" style = "color: #c0c0c0"></i>
          <% end %>
        </div>
        
    </div>
    
    <div class = "row">
        <div class = "col-sm-12 col-mg- 12 col-lg-12">
            
            <table class = "table table-borderless text-nowrap">
                <thead>
                    <tr>
                        <th scope="col">商品ID</th>
                        <th scope="col">商品名</th>
                        <th scope="col">税抜価格</th>
                        <th scope="col">ジャンル</th>
                        <th scope="col">ステータス</th>
                    </tr>
                </thead>
              
                <tbody>
                    <% @item.each do |item| %>
                    <tr>
                        
                        <td><%= item.id %></td>
                        <td><%= item.name %></td>
                        <td><%= item.price %></td>
                        <td><%= item.genre.name %></td>
                        <td class = "text-success">
                            <% if item.is_active %>
                            <%= "販売中" %>
                            <% else %>
                            <%= "販売停止中" %>
                            <% end %>
                        </td>
                         
                    </tr>
                    <% end %>
                </tbody>
                
            </table>
            <div class = "lead m-3 start-50"><%= paginate @item %></div>
           
        </div>
    </div>
</div>