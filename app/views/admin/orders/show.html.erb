

<div class = "container">
    
    <div class = "row m-3">
         <div class = "col-sm-12 col-md-12 col-lg-12"><h3>注文履歴詳細</h3></div>
    </div>
    
     <div class = "row">
        <div class = "col-sm-12 col-md-3 col-lg-3">購入者</div>
　　　　<div class = "col-sm-12 col-md-5 col-lg-5"><%= @order.name %></div>
    </div>
     <div class = "row">
        <div class = "col-sm-12 col-md-3 col-lg-3">注文日</div>
　　　　<div class = "col-sm-12 col-md-7 col-lg-8"><%= @order.created_at.strftime('%Y/%m/%d') %></div>
    </div>
     <div class = "row">
        <div class = "col-sm-12 col-md-3 col-lg-3">配送先</div>
　　　　<div class = "col-sm-12 col-md-7 col-lg-8">〒<%= @order.postal_code %> <%= @order.address %><br><%= @order.name %></div>
    </div>
    <div class = "row">
        <div class = "col-sm-12 col-md-3 col-lg-3">支払方法</div>
    　　<div class = "col-sm-12 col-md-7 col-lg-8"><%= @order.payment_method_i18n %></div>
    </div>
    <div class = "row">
        <div class = "col-sm-12 col-md-3 col-lg-3">注文ステータス</div>
    　　<div class = "col-sm-12 col-md-7 col-lg-8"> 
    　　  <%= form_for @order, url: admin_order_path(@order) do |f| %>
          <%= f.select :status, Order.statuses_i18n.invert %>
          <%= f.submit '更新'  ,class: "btn btn-success" %>
          <% end %>
          
      	</div>
    
      </div>
   
    
    <div class = "row">
        
        <div class = "col-sm-12 col-md-9 col-lg-8">
            <table class = "table table-bordered">
                <thead>
                    <tr>
                        <th>商品名</th>
                        <th>単価（税込）</th>
                        <th>数量</th>
                        <th>小計</th>
                        <th>製作ステータス</th>
                    </tr>
                </thead>
                <tbody>
                     <% @order_details.each do |order_detail| %>
                    <tr>
                       
                        <td><%= order_detail.item.name %></td>
                        <td><%= (order_detail.price*1.1).floor %></td>
                        <td><%= order_detail.amount %></td>
                        <td><%= (order_detail.price*1.1).floor*(order_detail.amount) %></td>
                        <td><%= form_for order_detail, url: admin_order_detail_path(order_detail) do |f| %>
                            <%= f.select :making_status, OrderDetail.making_statuses_i18n.invert %>
                            <%= f.submit '更新'  ,class: "btn btn-success" %>
                            <% end %></td>
                         
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
   
    
        <div class = "col-sm-12 col-md-3 col-lg-4">
            <table class = "table table-bordered">
                <thead>
                      
                    <tr>
                        <th>商品合計</th>
                        <td><% @sum = 0 %>
                            <% @order_details.each do |order_detail| %>
                            <% @sum += (order_detail.price*1.1).floor*(order_detail.amount) %>
                            <% end %>
                            <%= @sum %>
                        </td>
                    </tr>
                    <tr>
                        <th>送料</th>
                        <td><%= @order.postage %></td>
                    </tr>
                    <tr>
                        <th>請求金額合計</th>
                        <td><%= @order.total_payment.to_s(:delimited) %>円</td>
                    </tr>
                     
                </thead>
                 
            </table>
         </div>

    </div>
  </div>
</div>