
<div class = "container">
    <div class = "row m-3">
        <div class = "col-sm-12 col-mg-3 col-lg-3">
        </div>
        
       
        <div class = "col-sm-12 col-mg-4 col-lg-3">
            <% if @item.image.attached? %>
            <%= image_tag  @item.image, size: "250x150" %>
            <% else %>
            <%= image_tag "no_image_default.png",size: "250x150" %>
            <% end %>
        </div>
         
        <div class = "col-sm-12 col-mg-5 col-lg-6">
           
            <h3 class = "font-weight-bold m-3"><%= @item.name %></h3>
            <h5><%= @item.introduction %></h5><br>
             
             
            <h5>￥<%= @item.add_tax_price.to_s(:delimited) %>(税込)</h5><br>
             
             <!--カートアイテム個数-->
             <%= form_with model: @cart_item, url: public_cart_items_path, method: :get do |f| %>
             <%= f.hidden_field :item_id, :value => @item.id %>
             <%= f.select :amount, *[1..20] %>
             <%= f.submit "カートに入れる", class: "btn btn-success" %>
             <% end %>
             
        </div>
        <div class = "col-sm-12 col-mg-5 col-lg-6">
           
        </div>
   </div>
</div>