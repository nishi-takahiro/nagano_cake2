<main>
  <div class = "container">
    <div class = "row">
      <div class = "col-sm-12 col-mg-12 col-lg-12 px-sm-0">
       
        <h4 class = "col-lg-3 m-3 text-right">新規会員登録</h4>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        
        <div class = "row">
          <div class = "col-lg-3">名前</div>
            <div class = "col-lg-3 text-right">
              <div class ="form-group">
                <div class="field">
                  (性)<%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
                </div>
              </div>
             </div>
             <div class = "col-lg-3">
                <div class ="form-group text-right">
                  <div class="field">
                    (名)<%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
                  </div>
                </div>
              </div>
            </div> 
          <div class = "row">
            <div class = "col-lg-3">フリガナ</div>
              <div class = "col-lg-3 text-right">
                <div class ="form-group">
                  <div class="field">
                    (セイ)<%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name" %>
                  </div>
                </div>
               </div>
               <div class = "col-lg-3">
                  <div class ="form-group text-right">
                    <div class="field">
                      (メイ)<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name" %>
                    </div>
                  </div>
                </div>
            </div>
            <div class = "row">
              <div class ="col-lg-3">メールアドレス</div>
                <div class = "col-lg-3">
                  <div class ="form-group  float-right">
                    <div class="field">
                      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                    </div>
                  </div>
               </div>
            </div>
             <div class = "row">
              <div class ="col-lg-3">郵便番号(ハイフンなし)</div>
                <div class = "col-lg-3">
                  <div class ="form-group  float-right">
                    <div class="field">
                      <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
                    </div>
                  </div>
               </div>
            </div>
             <div class = "row">
              <div class ="col-lg-3">住所</div>
                <div class = "col-lg-6">
                  <div class ="form-group  float-right">
                    <div class="field , size:30">
                      <%= f.text_field :address, size:60, autofocus: true, autocomplete: "address" %>
                    </div>
                  </div>
               </div>
            </div>
              <div class = "row">
              <div class ="col-lg-3">電話番号(ハイフンなし)</div>
                <div class = "col-lg-3">
                  <div class ="form-group  float-right">
                    <div class="field ">
                      <%= f.telephone_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
                    </div>
                  </div>
               </div>
            </div>
             
            <div class = "row">
              <div class = "col-lg-3">パスワード(6文字以上)</div>
                <div class = "col-lg-3">
                  <div class = "form-group float-right">
                    <div class="field">
                       <% if @minimum_password_length %>
                       <% end %>
                       <%= f.password_field :password, autocomplete: "new-password" %>
                    </div>    
                 </div>
               </div>
            </div>
            
             <div class = "row">
              <div class ="col-lg-3">パスワード(確認用)</div>
                <div class = "col-lg-3">
                  <div class = "form-group float-right">
                     <div class="field">
                        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                    </div>
                  </div>
                </div>
            </div>
            
            <div class = "row">
               <div class = "col-lg-3"></div>
                 <div class="actions col-lg-3">
                 <%= f.submit "新規登録" , class:"btn btn-success btn-block" %>
                 <% end %>
               </div>
              </div>
              <div class = "row">
                <h4 class = "col-lg-3 m-3 text-right">既に登録済みの方</h4>
              </div>
              <div class = "row">
                <p class = "col-lg-4 m-3 text-right"><%= render "public/shared/links" %>　からログインしてください</p>
              </div>
            
    </div>
  </div>
</main>
