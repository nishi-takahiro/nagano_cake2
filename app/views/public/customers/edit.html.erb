<div class = "container">
    <div class = "row">
        <div class = "col-sm-12 col-mg-11 col-lg-10 px-sm-0">
            
            <h4 class ="col-lg-3 m-4 text-right font-weight-bold">会員情報編集</h4>
            
            
            <%= form_with model: @customer, url: public_customers_my_page_path, method: :patch do |f| %>
            <div class = "row">
                <div class = "col-lg-2 align-items-center">氏名</div>
                <div class = "col-lg-3">
                    <div class = "form-group">
                        <div class = "field">
                            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
                        </div>
                    </div>
                </div>
                <div class = "col-lg-3">
                  <div class ="form-group">
                     <div class="field">
                      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
                     </div>
                </div>
              </div>
            </div>
            <div class = "row">
              <div class = "col-lg-2 align-items-center">フリガナ</div>
                <div class = "col-lg-3">
                    <div class = "form-group">
                        <div class = "field">
                            <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
                        </div>
                    </div>
                </div>
                <div class = "col-lg-3">
                  <div class ="form-group">
                     <div class="field">
                      <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
                     </div>
                </div>
              </div>
            </div>
            <div class = "row">
              <div class ="col-lg-2 align-items-center">郵便番号</div>
                <div class = "col-lg-3">
                    <div class = "form-group">
                      <div class = "field">
                        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
                      </div>
                   </div>
                </div>
            </div>
            
            <div class = "row">
                <div class = "col-lg-2 align-items-center">住所</div>
                  <div class = "col-lg-3">
                      <div class = "form-group">
                          <div class = "field">
                            <%= f.text_field :address, size: 60, autofocus: true, autocomplete: "address" %>
                          </div>
                      </div>
                  </div>
            </div>
            
            <div class = "row">
                <div class = "col-lg-2 align-items-center">電話番号</div>
                  <div class = "col-lg-3">
                      <div class = "form-group">
                          <div class = "field">
                            <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
                          </div>
                      </div>
                  </div>
            </div>
            <div class = "row">
                <div class = "col-lg-2 align-items-center">メールアドレス</div>
                 <div class = "col-lg-3">
                     <div class = "form-group">
                         <div class = "field">
                           <%= f.text_field :email, autofocus: true, autocomplete: "email" %>
                         </div>
                     </div>
                 </div>
            </div>
            
            <div class = "row">
                <div class = "col-lg-2"></div>
                <div class = "col-lg-3 mr-5"><%= f.submit "編集内容を保存", style: "width:250", class: "btn btn-success" %></div>
                <div class = "col-lg-3 ml-5"><%= f.submit "退会する",class: "btn btn-danger" %></div>
            </div>
            <% end %> 
            
        </div>
    </div>
</div>