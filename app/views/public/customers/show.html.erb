
  <div class = "container">
      <div class = "row">
          <div class = "col-sm-11 col-mg-11 col-lg-10 px-sm-0">
              <h5 class = "col-lg-3 m-3">マイページ</h5>
                  
                  <div class = "row font-weight-bold align-items-center">
                      <div class = "col-lg-2 font-weight-bold">登録情報</div>
                       <div class = "col-lg-4 font-weight-bold align-items-center">
                        <%= link_to edit_public_customer_path(@customer), class:"btn btn-success m-3" do %>
                        <i>編集する</i>
                        <% end %>
                     </div>
                  </div>
                  
                  <div class = "row">
                    <div class = "col-sm-12 col-mg-8 col-lg-7">
                      <table class = "table table-bordered">
                        <tr>
                          <th>氏名</th>
                          <td><%= @customer.first_name %>　<%= @customer.last_name %></td>
                        </tr>
                        <tr>
                          <th>カナ</th>
                          <td><%= @customer.first_name_kana %>　<%= @customer.last_name_kana %></td>
                        </tr>
                        <tr>
                          <th>郵便番号</th>
                          <td><%= @customer.postal_code %></td>
                       </tr>
                       <tr>
                         <th>住所</th>
                         <td><%= @customer.address %></td>
                       </tr>
                       <tr>
                         <th>電話番号</th>
                         <td><%= @customer.telephone_number %></td>
                       </tr>
                       <tr>
                         <th>メールアドレス</th>
                         <td><%= @customer.email %></td>
                       </tr>
                     </table>
                  
                   <div class = "row font-weight-bold align-items-center">
                       <div class = "col-lg-3 font-weight-bold align-items-center">配送先</div>
                        <div class = "col-lg-4 font-weight-bold align-items-center">
                         <%= link_to public_orders_path, class:"btn btn-primary m-3 " do %>
                         <i>一覧を見る</i>
                         <% end %>
                       </div>
                   </div>
                   
                   <div class = "row font-weight-bold align-items-center">
                      <div class = "col-lg-3 font-weight-bold  align-items-center">注文履歴</div>
                      <div class = "col-lg-4 font-weight-bold align-items-center">
                        <%= link_to public_addresses_path, class:"btn btn-primary m-3" do %>
                        <i>一覧を見る</i>
                        <% end %>
                    </div>  
                  </div>
                  
                  </div>
                  </div>
          </div>
      </div>
  </div>